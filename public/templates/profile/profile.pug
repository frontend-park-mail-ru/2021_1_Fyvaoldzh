        .button-block
            button.button-active
                span.button-label &Pcy;&lcy;&acy;&ncy;&icy;&rcy;&ucy;&iecy;&mcy;&ycy;&iecy;
            button.button-inactive
                span.button-label_inactive &Pcy;&ocy;&scy;&iecy;&shchcy;&iecy;&ncy;&ncy;&ycy;&iecy;
        #events-list.my-events-block
        .paginator
            a.paginator__arrow-back(href='#')
